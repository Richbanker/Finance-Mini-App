# Finance Mini App - Environment Variables Example
# Copy this file to .env.local and fill in your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application URL (used for sharing and redirects)
VITE_APP_URL=https://your-domain.vercel.app

# Application Name
VITE_APP_NAME="Finance Mini App"

# Application Version (automatically set from package.json)
VITE_APP_VERSION=1.0.0

# =============================================================================
# TELEGRAM SETTINGS
# =============================================================================

# Telegram Bot Token (for production deployment)
# Get from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram WebApp URL (should match your deployment URL)
TELEGRAM_WEBAPP_URL=https://your-domain.vercel.app

# =============================================================================
# ANALYTICS (OPTIONAL)
# =============================================================================

# Google Analytics 4 Measurement ID
# Format: G-XXXXXXXXXX
VITE_GA_MEASUREMENT_ID=

# Yandex Metrica Counter ID
VITE_YM_COUNTER_ID=

# =============================================================================
# ERROR TRACKING (OPTIONAL)
# =============================================================================

# Sentry DSN for error tracking
# Get from https://sentry.io
VITE_SENTRY_DSN=

# Sentry Environment
VITE_SENTRY_ENVIRONMENT=production

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable development features (auto-filled)
VITE_DEV_MODE=false

# Enable debug logging
VITE_DEBUG=false

# API Base URL (if you add backend later)
VITE_API_BASE_URL=

# =============================================================================
# FEATURE FLAGS (OPTIONAL)
# =============================================================================

# Enable experimental features
VITE_ENABLE_EXPERIMENTAL=false

# Enable PWA features
VITE_ENABLE_PWA=true

# Enable offline mode
VITE_ENABLE_OFFLINE=true

# =============================================================================
# STORAGE SETTINGS
# =============================================================================

# Local Storage Key Prefix
VITE_STORAGE_PREFIX=finance-v1

# Maximum transactions to store
VITE_MAX_TRANSACTIONS=10000

# =============================================================================
# UI SETTINGS
# =============================================================================

# Default currency
VITE_DEFAULT_CURRENCY=RUB

# Default theme (light|dark|auto)
VITE_DEFAULT_THEME=auto

# Enable animations
VITE_ENABLE_ANIMATIONS=true
